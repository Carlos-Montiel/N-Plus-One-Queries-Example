= form_for @restaurant do |f|
  - if @restaurant.errors.any?
    #error_explanation
      %h2= "#{pluralize(@restaurant.errors.count, "error")} prohibited this restaurant from being saved:"
      %ul
        - @restaurant.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :owner
    = f.collection_select :owner_id, Owner.all, :id, :name
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :restaurant_type
    = f.text_field :restaurant_type
  .field
    = f.label :description
    = f.text_field :description
  .field
    = f.label :zip_code
    = f.collection_select :zip_code_id, ZipCode.all, :id, :name
  .actions
    = f.submit 'Save'
